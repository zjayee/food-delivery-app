<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dishcard"
        android:layout_width="324dp"
        android:layout_height="107dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/dishimagecard"
        app:layout_constraintTop_toTopOf="@+id/dishimagecard"
        app:cardBackgroundColor="@color/cardbackground"
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/dishimagecard"
        android:layout_width="109dp"
        android:layout_height="107dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardElevation="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="@color/cardbackground"
        >
        <ImageView
            android:id="@+id/dishimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/steak"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/dishname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/dishimagecard"
        app:layout_constraintTop_toTopOf="@id/dishcard"
        android:text="Dish Name"
        android:textColor="@color/text1"
        android:fontFamily="@font/playfair_display_bold"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:elevation="15dp"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dishname"
        app:layout_constraintLeft_toRightOf="@id/dishname"
        android:elevation="15dp"
        android:textSize="18sp"
        android:layout_marginLeft="40dp"
        android:text="$$"
        android:textColor="@color/text1"
        android:fontFamily="@font/playfair_display_bold"
        />

    <TextView
        android:id="@+id/dishdescription"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/dishname"
        app:layout_constraintTop_toBottomOf="@+id/dishname"
        android:text="description description description"
        android:textColor="@color/text2"
        android:fontFamily="@font/open_sans_italic"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:elevation="15dp"
        />




    <ImageView
        android:id="@+id/amountcard"
        android:layout_width="85dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/dishdescription"
        app:layout_constraintLeft_toLeftOf="@id/dishdescription"
        android:layout_marginTop="5dp"
        android:src="@drawable/amountcard"
        android:elevation="15dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/amountcard"
            app:layout_constraintBottom_toBottomOf="@id/amountcard"
            app:layout_constraintLeft_toLeftOf="@id/amountcard"
            app:layout_constraintRight_toRightOf="@+id/amountcard"
            android:orientation="horizontal"
            android:elevation="15dp"
            >

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/ic_plus"
            android:backgroundTint="@color/transparent"
            android:paddingHorizontal="15dp"
            />

            <TextView
            android:id="@+id/amounttextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/text1"
            android:layout_marginTop="4dp"

            />

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/ic_minus"
            android:backgroundTint="@color/transparent"
            android:paddingHorizontal="15dp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>