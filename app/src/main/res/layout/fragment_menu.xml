<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu">

    <FrameLayout
        android:id="@+id/outsidebox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/card"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardBackgroundColor="@color/background"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        android:layout_width="570dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        >

        <ImageView
            android:id="@+id/selectedbackground"
            android:layout_width="320dp"
            android:layout_height="92dp"
            android:src="@drawable/menuselected"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:layout_marginLeft="175dp"
            />

</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="10dp"
        app:layout_constraintRight_toRightOf="@id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        >
    <Button
        android:id="@+id/homebutton"
        android:layout_width="match_parent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="84dp"
        android:backgroundTint="@null"
        android:text="Home"
        android:textColor="@color/text1"
        android:fontFamily="@font/playfair_display_bold"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:paddingLeft="30dp"
        android:textAllCaps="false"

        />
        <Button
            android:id="@+id/cartbutton"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="84dp"
            android:backgroundTint="@color/transparent"
            android:text="My Cart"
            android:textColor="@color/text1"
            android:fontFamily="@font/playfair_display_bold"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/trackorderbutton"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="84dp"
            android:backgroundTint="@color/transparent"
            android:text="Track Order"
            android:textColor="@color/text1"
            android:fontFamily="@font/playfair_display_bold"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/favouritesbutton"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="84dp"
            android:text="Favourites"
            android:textColor="@color/text1"
            android:fontFamily="@font/playfair_display_bold"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/rewardsbutton"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="84dp"
            android:backgroundTint="@color/transparent"
            android:text="Rewards"
            android:textColor="@color/text1"
            android:fontFamily="@font/playfair_display_bold"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textAllCaps="false"
            />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="@id/card"
        android:elevation="10dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            app:tint="@color/text3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            app:tint="@color/text3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            app:tint="@color/text3"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            android:paddingTop="30dp"
            android:paddingBottom="35dp"
            app:tint="@color/text3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_present"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            app:tint="@color/text3" />

    </LinearLayout>

<ImageButton
    android:id="@+id/nightmodebutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/transparent"
    android:src="@drawable/nighticon"
    android:elevation="10dp"
    app:layout_constraintBottom_toBottomOf="@id/card"
    app:layout_constraintLeft_toLeftOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>