<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/amountcard"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:src="@drawable/amountcard"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/amountcard"
        app:layout_constraintBottom_toBottomOf="@id/amountcard"
        app:layout_constraintLeft_toLeftOf="@id/amountcard"
        app:layout_constraintRight_toRightOf="@+id/amountcard"
        android:orientation="horizontal"
        android:elevation="15dp"
        >

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/ic_minus"
            android:backgroundTint="@color/transparent"
            android:paddingHorizontal="15dp"
            />

        <TextView
            android:id="@+id/amounttextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/text1"
            android:layout_marginTop="4dp"

            />

         <ImageButton
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:src="@drawable/ic_plus"
        android:backgroundTint="@color/transparent"
        android:paddingHorizontal="15dp"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>