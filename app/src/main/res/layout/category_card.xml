<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/categoryimagecard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="59dp"
        android:layout_height="59dp"
        app:cardCornerRadius="50dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="10dp"
        >

    <ImageView
        android:id="@+id/categoryimage"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/categoryname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="category"
        app:layout_constraintLeft_toLeftOf="@+id/categoryimagecard"
        app:layout_constraintRight_toRightOf="@+id/categoryimagecard"
        app:layout_constraintTop_toBottomOf="@+id/categoryimagecard"
        android:fontFamily="@font/open_sans"
        android:textSize="11sp"

        />

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:src="@drawable/circularshadow"
        android:scaleType="fitXY"
        android:layout_marginTop="3dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>